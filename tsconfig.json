{
  "compilerOptions": {
    "target": "ES2020",         
    "module": "CommonJS",     
    "strict": true,             
    "esModuleInterop": true,   
    "skipLibCheck": true,       
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",         
    "rootDir": "./",
    "lib": ["ES2020", "DOM"]          
  },
  "include": ["./*.ts", "./classes/*.ts"], 
  "exclude": ["node_modules"]               
}